<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    >
    <LinearLayout

       android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
      android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
        android:orientation="vertical"
        >


         <LinearLayout

             android:layout_marginLeft="8dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:orientation="horizontal">

         <ImageView
             android:layout_marginLeft="4dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
               android:background="@drawable/pay_baidu"
             />
             <ImageView
                 android:layout_marginLeft="4dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/pay_back"
                 />
             <ImageView
                 android:layout_marginLeft="4dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/pay_zhifubao"
                 />
             <ImageView
                 android:layout_marginLeft="4dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/pay_weixian"
                 />



         </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#404342"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="支付方式:"
                />
            <TextView

                android:textColor="#404342"
                android:layout_marginLeft="16dp"
                android:id="@+id/pay_tv_givemoneystyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="pos机支付"
                />


        </LinearLayout>


    </LinearLayout>

</FrameLayout>
