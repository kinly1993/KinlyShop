<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
<TextView
    android:gravity="center_vertical"
     android:paddingLeft="6dp"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="订单收货信息"
    android:textSize="16sp"
    android:textColor="#97989a"
    android:background="#8ec9fe"
    android:drawableLeft="@drawable/pay_dingdan"
    android:drawablePadding="6dp"

    />
    <LinearLayout

        android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/selector_list_item"
       android:paddingLeft="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#97989a"
            android:text="收货人信息:"
            />
        <TextView
            android:id="@+id/com_tv_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#97989a"
            android:text="姓名:"
            />
        <TextView
            android:id="@+id/com_tv_phone"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#97989a"
            android:text="电话:"
            />
        <TextView
            android:id="@+id/com_tv_adress"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#97989a"
            android:text="地址:"
            />



    </LinearLayout>
    <TextView

        android:gravity="center_vertical"
        android:id="@+id/com_tv_detaititle"
        android:paddingLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="商品清单"
        android:textColor="#8ec9f1"
        android:drawableLeft="@drawable/pay_product"
        android:drawablePadding="6dp"

        ></TextView>

</LinearLayout>
